.content {
  padding: 60rpx;
}

.page-title {
  color: #fff;
  font-size: 28rpx;
  font-weight: 400;
}

.section-title {
  color: #888;
  font-size: 22rpx;
  font-weight: 500;
  margin-top: 64rpx;
}

.problem-item {
  margin-top: 20rpx;
}

.problem-item-text {
  color: #fff;
  font-size: 28rpx;
  font-weight: 400;
}

.selection {
  width: 28rpx;
  height: 28rpx;
  margin-right: 16rpx;
}

textarea {
  width: 100%;
  display: flex;
  padding: 28rpx 28rpx 0rpx 28rpx;
  align-items: flex-start;
  gap: 16rpx;
  border-radius: 8rpx;
  background: #444;
  color: #fff;
  font-size: 28rpx;
}

button {
  border-radius: 9999rpx;
  background: var(--action);
  padding: 20rpx 28rpx;
  font-weight: bold;
  color: black;
  width: 55% !important;
  margin-top: 80rpx;
}

button.successed {
  width: 360rpx !important;
  margin-top: 0;
}

@keyframes popIn {
  0% {
    transform: translate(-50%, -50%) scale(0.9);
    opacity: 0;
  }
  100% {
    transform: translate(-50%, -50%) scale(1);
    opacity: 1;
  }
}

.dialog {
  display: flex;
  width: 600rpx;
  padding: 64rpx;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 48rpx;
  border-radius: 24rpx;
  background: #fff;
  z-index: 999;
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  animation: popIn 0.5s forwards;
}

.image-dialog {
  width: 128rpx;
  height: 128rpx;
}

.dialog-title {
  color: #151515;
  text-align: center;
  font-size: 36rpx;
  font-weight: 600;
}

.dialog-content {
  text-align: center;
  color: #151515;
  text-align: center;
  font-size: 28rpx;
  font-weight: 400;
}

.background {
  width: 100%;
  height: 100vh;
  background: rgba(0, 0, 0, 0.5);
  z-index: 999;
  position: fixed;
}
